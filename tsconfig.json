{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}
